<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/breakfast</property>
        <property name="hibernate.connection.username">newuser</property>
        <property name="hibernate.connection.password">newuser</property>

        <property name="current_session_context_class">thread</property>

        <property name="hibernate.show_sql">true</property>
        <mapping class="com.example.orderhibfx.models.Product"/>
        <mapping class="com.example.orderhibfx.models.Request"/>

    </session-factory>
</hibernate-configuration>